<div class="flex justify-center p-3">
<input class="bg-white focus:outline-none focus:shadow-outline border border-gray-300 rounded-lg py-2 px-4 block w-7/12 appearance-none leading-normal" type="text" placeholder="Search for an item">
</div>
{{#each model as |item|}}
<div class="flex mb-4 p-3">
  <div class="w-3/4 h-12 font-semibold">{{item.title}} [{{item.quantity}}]</div>
  <div class="w-1/4 h-12">
  <button class="bg-transparent hover:bg-teal-500 text-teal-700 font-semibold hover:text-white py-2 px-4 border border-teal-500 hover:border-transparent rounded">
  Add +
</button>
</div>
</div>
{{/each}}